{% extends 'CalderaStvoBundle::layout.html.twig' %}

{% block title %}Übersicht StVO{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        Übersicht
    </li>
{% endblock %}

{% block content %}
    <div class="container mt-3">
        <div class="row">
            <div class="col-xs-12 col-md-10 offset-md-1">
                <h1>
                    {{ law.title }}
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-md-10 offset-md-1">
                <ul class="list-unstyled">
                    {% for paragraph in paragraphList %}
                    <li class="mt-3">
                        <a href="{{ path('caldera_stvo_paragraph_current', { number: paragraph.number }) }}">
                            <h3>
                                § {{ paragraph.number }}: {{ paragraph.title }}
                            </h3>
                        </a>

                        {{ paragraph.text|raw }}
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}