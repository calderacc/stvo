{% extends 'CalderaStvoBundle::layout.html.twig' %}

{% block title %}§ {{ paragraph.number }} {{ paragraph.title }} StVO{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('caldera_stvo_overview') }}">
            Übersicht
        </a>
    </li>
    <li class="breadcrumb-item active">
        § {{ paragraph.number }}: {{ paragraph.title }}
    </li>
{% endblock %}

{% block content %}
    <div class="container mt-3">
        <div class="row">
            <div class="col-xs-12 col-md-10 offset-md-1">
                <h1>
                    {{ law.title }}
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-md-10 offset-md-1 paragraph">
                <a href="{{ path('caldera_stvo_paragraph_current', { number: paragraph.number }) }}">
                    <h3>
                        § {{ paragraph.number }}: {{ paragraph.title }}
                    </h3>
                </a>

                {{ paragraph.text|raw }}
            </div>
        </div>
    </div>
{% endblock %}