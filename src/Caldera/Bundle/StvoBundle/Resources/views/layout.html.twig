<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{% block title %}{% endblock %}</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta http-equiv="x-ua-compatible" content="ie=edge" />

        <link rel="stylesheet" href="{{ asset('/bundles/calderastvo/css/stvo.css') }}" />
    </head>
    <body>
        <nav class="navbar navbar-light bg-faded mb-1">
            <a class="navbar-brand" href="#">
                stvo.tips
            </a>

            <form class="form-inline float-xs-right">
                <input class="form-control" type="text" placeholder="" />
                <button class="btn btn-outline-primary" type="submit">Suche</button>
            </form>

            <div class="form-inline float-xs-right mr-2">
                <div class="dropdown float-xs-right">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Fassung
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        {% for version in versionList %}
                            <a class="dropdown-item" href="{{ path('caldera_stvo_version', { versionSlug: version.slug }) }}">
                                {{ version.title }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{{ path('caldera_stvo_frontpage') }}">
                                stvo.tips
                            </a>
                        </li>
                        {% block breadcrumb %}{% endblock %}
                    </ol>
                </div>
            </div>
        </div>

        {% block content %}{% endblock %}

        <div class="row mt-3 hidden-sm-down">
            <div class="col-md-12 text-md-center">
                <ins data-revive-zoneid="7" data-revive-id="41009926173ca0d1c900a7dc0a6dd401"></ins>
                <script async src="//adserver.caldera.cc/delivery/asyncjs.php"></script>
            </div>
        </div>

        <!-- Piwik -->
        <script type="text/javascript">
            var _paq = _paq || [];
            // tracker methods like "setCustomDimension" should be called before "trackPageView"
            _paq.push(["setCookieDomain", "*.stvo.tips"]);
            _paq.push(['trackPageView']);
            _paq.push(['enableLinkTracking']);
            (function() {
                var u="//piwik.caldera.cc/";
                _paq.push(['setTrackerUrl', u+'piwik.php']);
                _paq.push(['setSiteId', '9']);
                var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
                g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
            })();
        </script>
        <!-- End Piwik Code -->

        <script src="{{ asset('/bundles/calderastvo/js/external/jquery-3/jquery-3.1.1.min.js') }}"></script>
        <script src="{{ asset('/bundles/calderastvo/js/external/tether/tether-1.3.7.min.js') }}"></script>
        <script src="{{ asset('/bundles/calderastvo/js/external/bootstrap-4/bootstrap.min.js') }}"></script>
    </body>
</html>