<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="caldera_stvo_overview" path="/uebersicht">
        <default key="_controller">CalderaStvoBundle:Default:overview</default>
    </route>

    <route id="caldera_stvo_version" path="/{{version}}">
        <default key="_controller">CalderaStvoBundle:Default:version</default>
    </route>

    <route id="caldera_stvo_paragraph_current" path="/{{paragraph}}">
        <default key="_controller">CalderaStvoBundle:Default:currentParagraph</default>
    </route>

    <route id="caldera_stvo_paragraph_version" path="/{{version}}/{{paragraph}}">
        <default key="_controller">CalderaStvoBundle:Default:paragraph</default>
    </route>
</routes>